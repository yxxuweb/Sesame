{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "target": "es6",
    "skipLibCheck": true,
    "lib": [
      "ES6",
      "dom"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true,
    "declaration": false,
    "sourceMap": true,
    "inlineSources": true,
    "stripInternal": true,
    "incremental": true,
    "skipDefaultLibCheck": true,
    "inlineSourceMap": false
  },
  "include": [
    "example/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
